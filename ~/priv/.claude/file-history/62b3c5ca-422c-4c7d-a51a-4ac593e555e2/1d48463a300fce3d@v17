        Connect with your phone<br>
        to select a game and play!
      </p>
      <div class="player-count-lobby" id="player-count-lobby">
        <span class="count">0</span> players connected
      </div>
    </div>
  </div>

  <!-- Game canvas and UI -->
  <canvas id="game-canvas"></canvas>
  <div id="game-ui">
    <div id="qr-mini-container">
      <div id="qr-mini-label">Join the fun!<br>Scan to play</div>
      <div id="qr-mini"></div>
    </div>
  </div>

  <script src="js/games.js"></script>
  <script src="js/connection.js"></script>
  <script src="js/game-engine.js"></script>
  <script src="games/bumper-cars.js"></script>
  <script src="games/beach-volleyball.js"></script>
  <script src="games/snake.js"></script>
  <script>
    let connection;
    let game = null;
    let currentGameId = null;

    // Debug player for keyboard/mouse control
    let debugPlayer = null;

    function createDebugPlayer() {
      debugPlayer = {
        id: 'debug-player',
        peerId: 'debug-player',
        number: 0,
        name: 'Debug',
        color: '#ffd700',
        input: { x: 0, y: 0 },
        connected: true
      };
      return debugPlayer;
    }

    async function init() {
      // Populate game list (clickable for debug)
      const gameListEl = document.getElementById('game-list');
      GAME_LIST.forEach(g => {
        const card = document.createElement('div');
        card.className = 'game-card';
        card.style.cursor = 'pointer';
        card.innerHTML = `
          <div class="game-icon">${g.icon}</div>
          <div class="game-info">
            <h3>${g.name}</h3>
            <p>${g.description}</p>
          </div>
        `;
        // Click to start game with debug player
        card.addEventListener('click', () => {
          console.log('Debug: clicking game', g.id);
          createDebugPlayer();
          console.log('Debug: created player', debugPlayer);
          startGame(g.id);
          console.log('Debug: game started, game object:', game);
          if (game) {
            game.onPlayerJoin(debugPlayer);
            console.log('Debug: player joined');
          } else {
            console.log('Debug: game is null!');
          }
        });
        gameListEl.appendChild(card);
      });

      // Keyboard controls for debug player
      document.addEventListener('keydown', (e) => {
        if (!debugPlayer || !game) return;

        const speed = 1;
        switch (e.key) {
          case 'ArrowUp':
          case 'w':
            debugPlayer.input.y = -speed;
            debugPlayer.input.x = 0;
            break;
          case 'ArrowDown':
          case 's':
            debugPlayer.input.y = speed;
            debugPlayer.input.x = 0;
            break;
          case 'ArrowLeft':
          case 'a':
            debugPlayer.input.x = -speed;
            debugPlayer.input.y = 0;
            break;
          case 'ArrowRight':
          case 'd':
            debugPlayer.input.x = speed;
            debugPlayer.input.y = 0;
            break;
          case ' ':
            // Space for jump/serve
            if (game && typeof game.serve === 'function') {
              game.serve(debugPlayer.id);
            }
            break;
          case 'Escape':
            // End game
            endGame();
            debugPlayer = null;
            break;
        }

        if (game) {
          game.onPlayerInput(debugPlayer, debugPlayer.input);
        }
      });

      // Initialize connection manager
      // Fixed room code for party - phones can reconnect even if display refreshes
      connection = new ConnectionManager({
        roomCode: 'PARTY1',
        controllerUrl: 'https://charud.github.io/peer-tilt-test/controller.html',

        onReady: (roomCode, url) => {
          console.log('Room ready:', roomCode);
          console.log('Controller URL:', url);

          // Local URL for testing without waiting for GitHub Pages deploy
          // Using hash instead of query param since some dev servers strip query params
          const baseUrl = window.location.href.split('?')[0].split('#')[0];
          const localUrl = baseUrl.replace(/display(\.html)?$/, 'controller.html') + '#' + roomCode;
          console.log('Local controller URL:', localUrl);

          // Generate QR code for lobby
          new QRCode(document.getElementById('qr-code'), {
            text: url,
            width: 200,
            height: 200,
            colorDark: '#1a1a2e',
            colorLight: '#ffffff',
            correctLevel: QRCode.CorrectLevel.L
          });

          // Generate mini QR for in-game
          new QRCode(document.getElementById('qr-mini'), {
            text: url,
            width: 120,
            height: 120,
            colorDark: '#1a1a2e',
            colorLight: '#ffffff',
            correctLevel: QRCode.CorrectLevel.L
          });
        },

        onPlayerJoin: (player) => {
          console.log('Player joined:', player.number);
          updatePlayerCount();

          // Send current game state to new player
          connection.sendToPlayer(player.id, {
            type: 'game-state',
            gameId: currentGameId,
            games: GAME_LIST
          });

          // If in game, add player to game
          if (game && currentGameId) {
            game.onPlayerJoin(player);
          }
        },

        onPlayerLeave: (player) => {
          console.log('Player left:', player.number);
          updatePlayerCount();
          if (game) {
            game.onPlayerLeave(player);
          }
        },

        onPlayerInput: (player, data) => {
          // Handle request for current state
          if (data.type === 'request-state') {
            connection.sendToPlayer(player.id, {
              type: 'game-state',
              gameId: currentGameId,
              games: GAME_LIST
            });
          }
          // Handle game selection from controller
          else if (data.type === 'select-game') {
            console.log('Player', player.number, 'selected game:', data.gameId);
            startGame(data.gameId);
          }
          // Handle end game request
          else if (data.type === 'end-game') {
            console.log('Player', player.number, 'ended game');
            endGame();
          }
          // Handle restart game request
          else if (data.type === 'restart-game') {
            console.log('Player', player.number, 'restarted game');
            restartGame();
          }
          // Handle serve (volleyball)
          else if (data.type === 'serve') {
            if (game && typeof game.serve === 'function') {
              game.serve(player.id);
            }
          }
          // Handle reset players request
          else if (data.type === 'reset-players') {
            console.log('Player', player.number, 'requested reset players');
            resetAllPlayers();
          }
          // Handle tilt input - pass to game
          else if (data.type === 'tilt') {
            if (game && typeof game.onPlayerInput === 'function') {
              game.onPlayerInput(player, player.input);
            }
          }
        },

        onError: (err) => {
          console.error('Connection error:', err);
        }
      });

      await connection.init();
    }

    function updatePlayerCount() {
      const count = connection.playerCount;
      document.getElementById('player-count-lobby').innerHTML =
        `<span class="count">${count}</span> player${count !== 1 ? 's' : ''} connected`;
    }

    function startGame(gameId) {
      const gameInfo = GAMES[gameId];
      if (!gameInfo) return;

      currentGameId = gameId;

      // Hide lobby, show game
      document.getElementById('lobby').classList.add('hidden');
      document.getElementById('game-ui').classList.add('active');

      // Initialize game based on type
      const canvas = document.getElementById('game-canvas');
      if (gameId === 'bumper-cars') {
        game = new BumperCarsGame(canvas, connection);
      } else if (gameId === 'beach-volleyball') {
        game = new BeachVolleyballGame(canvas, connection);
      } else if (gameId === 'snake') {
        game = new SnakeGame(canvas, connection);
      }

      // Add existing players to game
      connection.playerList.forEach(player => {
        game.onPlayerJoin(player);
      });

      game.start();

      // Notify all players
      connection.broadcast({
        type: 'game-started',
        gameId: currentGameId
      });
    }

    function endGame() {
      if (game) {
        game.stop();
        game = null;
      }
      currentGameId = null;

      // Show lobby, hide game
      document.getElementById('lobby').classList.remove('hidden');
      document.getElementById('game-ui').classList.remove('active');

      // Notify all players
      connection.broadcast({
        type: 'game-ended',
        games: GAME_LIST
      });
    }

    function restartGame() {
      if (!currentGameId) return;

      const gameId = currentGameId;

      // Stop current game
      if (game) {
        game.stop();
        game = null;
      }

      // Start same game fresh
      startGame(gameId);
    }

    function resetAllPlayers() {
      console.log('Resetting all players...');

      // End any active game first
      if (game) {
        game.stop();
        game = null;
      }
      currentGameId = null;

      // Show lobby
      document.getElementById('lobby').classList.remove('hidden');
      document.getElementById('game-ui').classList.remove('active');

      // Disconnect all players (they will auto-reconnect)
      connection.playerList.forEach(player => {
        if (player.conn && player.conn.open) {
          player.conn.close();
        }
      });

      // Clear player list
      connection.players = {};
      updatePlayerCount();
    }

    init();
  </script>
</body>
</html>
